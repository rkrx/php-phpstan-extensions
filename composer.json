{
	"name": "rkr/phpstan-extensions",
	"description": "PHPStan extensions",
	"type": "library",
	"homepage": "https://github.com/rkrx/php-phpstan-extensions",
	"license": "MIT",
	"preferred-install": "source",
	"minimum-stability": "dev",
	"prefer-stable": true,
	"require": {
		"php": ">= 8.2",
		"phpstan/phpstan": "^2.1"
	},
	"autoload": {
		"psr-4": {
			"RKR\\PHPStan\\": ["src/", "stubs/"],
			"rkr\\": ["stubs/"]
		}
	},
	"autoload-dev": {
		"psr-4": {
			"RKR\\PHPStan\\": "tests/"
		}
	},
	"suggest": {
		"phpstan/phpstan": "PHPStan is a static analysis tool for PHP"
	},
	"scripts": {
		"phpstan": "phpstan analyse -c phpstan.neon --xdebug --debug",
		"test": "phpunit -c phpunit.xml"
	},
	"require-dev": {
		"dv-team/php-compact-code-style": "dev-main",
		"phpunit/phpunit": "^13.0"
	}
}
